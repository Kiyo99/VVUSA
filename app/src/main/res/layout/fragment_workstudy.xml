<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkstudyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:gravity="center"
            android:text="Gain experience, apply to workstudy positions"
            android:textColor="@android:color/black"
            android:fontFamily="@font/proxima_nova_bold"
            android:textSize="@dimen/slide_title"
            android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:padding="16dp"
            android:background="@drawable/card_shape"
            android:backgroundTint="@color/purplevvu">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Lab Assistant"
                android:id="@+id/first"
                android:textColor="@color/white"
                android:textSize="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/first"
                android:fontFamily="@font/roboto_mediumitalic"
                android:text="As a lab assistant, you are responsible for ensuring the lab rules are properly followed."
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/applyLab"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textSize="20dp"
                android:text="Apply"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/white"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:padding="16dp"
                android:background="@drawable/card_shape"
                android:backgroundTint="@color/purplevvu">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Weeding"
                    android:id="@+id/second"
                    android:textColor="@color/white"
                    android:textSize="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/second"
                    android:fontFamily="@font/roboto_mediumitalic"
                    android:text="As a weeder, you are responsible for ensuring the plants are properly trimmed."
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="20dp"
                    android:text="Apply"
                    android:id="@+id/applyWeeding"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/white"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:padding="16dp"
                android:background="@drawable/card_shape"
                android:backgroundTint="@color/purplevvu">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Office Secretary"
                    android:id="@+id/third"
                    android:textColor="@color/white"
                    android:textSize="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/third"
                    android:fontFamily="@font/roboto_mediumitalic"
                    android:text="As an office secretary, you will be assigned to your faculty office and perform duties befitting a secretary."
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="20dp"
                    android:text="Apply"
                    android:id="@+id/applySec"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/white"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:padding="16dp"
                android:background="@drawable/card_shape"
                android:backgroundTint="@color/purplevvu">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Sweeper"
                    android:id="@+id/fourth"
                    android:textColor="@color/white"
                    android:textSize="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fourth"
                    android:fontFamily="@font/roboto_mediumitalic"
                    android:text="As a sweeper, you are responsible for ensuring the school environment is tidy by sweeping daily."
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="20dp"
                    android:text="Apply"
                    android:id="@+id/applySweeper"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/white"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="50dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:padding="16dp"
                android:background="@drawable/card_shape"
                android:backgroundTint="@color/purplevvu">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Cafeteria worker"
                    android:id="@+id/fifth"
                    android:textColor="@color/white"
                    android:textSize="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fifth"
                    android:fontFamily="@font/roboto_mediumitalic"
                    android:text="As one who works in the cafeteria, you are to serve food to staff and students and help out in the kitchen when called upon.."
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="20dp"
                    android:text="Apply"
                    android:id="@+id/applyCaf"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/white"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    </LinearLayout>

</ScrollView>